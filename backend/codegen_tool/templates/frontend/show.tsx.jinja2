import { Show } from "@refinedev/antd";
import { useShow } from "@refinedev/core";
import { Typography } from "antd";

const { Text } = Typography;

export const {{ class_name }}Show = () => {
  const { queryResult } = useShow();
  const { data, isLoading } = queryResult;
  const record = data?.data;

  return (
    <Show isLoading={isLoading}>
{% for field in fields if not field.common %}
      <Text strong>{{ field.description if field.description else field.name | capitalize }}:</Text>
      <Text>{record?.{{ field.name }}}</Text>
      <br />
{% endfor %}
{% for field in fields if field.common %}
      <Text strong>{{ field.description if field.description else field.name | capitalize }}:</Text>
      <Text>{record?.{{ field.name }}}</Text>
      <br />
{% endfor %}
    </Show>
  );
};
